<h2>Admin</h2>

<div class='row-fluid'>
  <h4 class="pad-bottom-20 pad-top-30">Clear Data</h4>
  <p> This will clear all data except for users</p>
  <div class="span3 pad-bottom-20">
    <%= link_to 'Clear Data', admin_clear_data_path, class: "btn btn-mini btn-primary" %>
  </div>
</div>

<div class="row-fluid pad-top-30">
  <h3>Database Actions</h3>
  <h4 class="pad-bottom-20">Backup</h4>
  <div class="span3 pad-bottom-20">
    <%= link_to 'Backup Database', admin_backup_database_path, class: "btn btn-mini btn-primary" %>
  </div>
</div>
<div class='row-fluid'>
  <h4 class="pad-bottom-20">Restore</h4>

  <div class="span3 pad-bottom-20">
    <%= form_tag 'admin/restore_database', :multipart => true do %>
        Upload Previous Database Dump (targz) <%= file_field_tag "file", class: "btn btn-mini" %>
        </div>
        <div class="span3 pad-bottom-20">
          <div class="pad-top-20">
            <%= submit_tag "Upload and Restore Database", class: "btn btn-mini btn-primary" %>
          </div>
    <% end %>
    </div>
    </div>
<div class='row-fluid'>
  <h4 class="pad-bottom-20">Purge Database (This does not recreate indexes, use with caution)</h4>

  <div class="span3 pad-bottom-20">
    <%= link_to 'Purge Database', admin_purge_database_path, class: "btn btn-mini btn-primary" %>
  </div>
</div>




