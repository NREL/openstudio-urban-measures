<%= bootstrap_form_tag url: (@building.new_record? ? '/buildings' : "/buildings/#{@building.id}"),  method: (@building.new_record? ? :post : :put), layout: :horizontal do |f| %>

  <fieldset>
    <%= f.file_field :geojson_file, control_col: 'col-sm-4' %>
  </fieldset>

  <%= f.form_group do %>
    <%= f.primary @building.new_record? ? 'Create' : 'Update' %>
  <% end %>
<% end %>

