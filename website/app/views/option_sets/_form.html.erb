<%= bootstrap_form_tag url: (@option_set.new_record? ? '/option_sets' : "/option_sets/#{@option_set.id}"),  method: (@option_set.new_record? ? :post : :put), layout: :horizontal, control_col: 'col-sm-4' do |f| %>
  <% if @option_set.project %><h3 class="edit-name">Project: <%=link_to @option_set.project.id, @option_set.project %></h3><% end %>
  <% if @option_set.workflow %><h3 class="edit-name">Workflow: <%=link_to @option_set.workflow.id, @option_set.workflow %></h3><% end %>
  <%= f.hidden_field :project_id, value: @project_id %>
  <%= f.hidden_field :workflow_id, value: @workflow_id %>
  <fieldset>
    <%= f.text_field :name %>
  </fieldset>
 
  <%= f.form_group do %>
    <%= f.primary @option_set.new_record? ? 'Create' : 'Update' %>
  <% end %>
<% end %>

