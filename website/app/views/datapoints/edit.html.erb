<h2>Edit Datapoint</h2>
<h3 class="edit-name"><%= @datapoint.id %></h3>

	<%= render 'form' %>


<% if @datapoint.datapoint_files.size > 0 %>
	<div class="row">
		<div class="col-md-6">
			<h3 class="pad-top-20">Manage Uploaded Files</h3>
			<table class="table table-striped">
				<tr>
					<th>Filename</th>
					<th>Created Date</th>
					<th>Actions</th>
			  </tr>
			  <% @datapoint.datapoint_files.each do |df| %>
			    <tr>
			    	<td><%= df.file_name %></td>
			    	<td><%= df.created_at %></td>
			    	<td><%= link_to 'Download', download_file_datapoint_path(file_id: df) %> <% if can? :delete_file, Datapoint %>| <%= link_to 'Destroy', delete_file_datapoint_path(file_id: df) %><% end %></td>
			    </tr>
			  <% end %>
			</table>
		</div>
	</div>
<% end %>
