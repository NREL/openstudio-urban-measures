<%= bootstrap_form_for(@datapoint, layout: :horizontal, control_col: 'col-sm-4') do |f| %>

  <% if @datapoint.building %><h3 class="edit-name">Building: <%=link_to @datapoint.building.id, @datapoint.building %></h3><% end %>
  <% if @datapoint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@datapoint.errors.count, "error") %> prohibited this datapoint from being saved:</h2>

      <ul>
      <% @datapoint.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <%= f.text_field :building_id, {label: 'Building ID', disabled: true} %>
  </fieldset>
  <fieldset>
    <%= f.text_field :status, label: 'Status' %>
  </fieldset>
  <fieldset>
    <%= f.text_field :workflow_id, {label: 'Workflow ID', disabled: true} %>
  </fieldset>
  <fieldset class="pad-top-30 pad-bot-30">
    <%= f.file_field :file, label: 'Add a file' %>
  </fieldset>

  <%= f.form_group do %>
    <%= f.primary @datapoint.new_record? ? 'Create' : 'Update' %>
  <% end %>
<% end %>
