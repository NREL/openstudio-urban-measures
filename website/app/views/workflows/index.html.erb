<h2>Workflows</h2>

<table class="tablesorter table table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th>Type</th>
    <th>Actions</th>

  </tr>
  </thead>
  <tbody>
  <% @workflows.each do |workflow| %>
    <tr>
      <td><%= link_to workflow.id, workflow %></td>
      <td><%= workflow.type %></td>
      <td><%= link_to 'Edit', edit_workflow_path(workflow) %> | <%= link_to 'Destroy', workflow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
